{
  "manifest_version": 3,
  "name": "股票走势查看器",
  "version": "1.0",
  "description": "搜索股票并查看当天走势图",
  "permissions": [
    "activeTab",
    "storage"
  ],
      "host_permissions": [
        "https://query1.finance.yahoo.com/*",
        "https://hq.sinajs.cn/*",
        "https://cdn.jsdelivr.net/*"
    ],
  "web_accessible_resources": [
    {
      "resources": ["chart.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "股票走势查看器"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
} 